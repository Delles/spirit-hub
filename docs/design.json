{
  "project": "SpiritHub.ro",
  "version": "2.0",
  "description": "A comprehensive design system for SpiritHub.ro - a Romanian spiritual platform combining numerology, dream interpretation, and biorhythm calculations. The design merges mystical elegance with modern minimalism, featuring a dark theme with vibrant purple and blue accents inspired by the cosmos.",

  "designPrinciples": [
    {
      "principle": "Mystical Elegance",
      "description": "Combine mystery and wonder with clean, sophisticated aesthetics. The design should feel premium, trustworthy, and spiritually resonant without being overwhelming or sensational."
    },
    {
      "principle": "Immersive Focus",
      "description": "Use minimalist layouts with strong central focus to draw users into the content. Generous negative space prevents distractions and creates breathing room for spiritual contemplation."
    },
    {
      "principle": "Vibrant Contrast",
      "description": "Employ high contrast between dark backgrounds and bright, glowing foreground elements. This ensures readability while creating a visually striking, cosmic experience."
    },
    {
      "principle": "Modern & Clean",
      "description": "Utilize modern sans-serif typography (Inter) and clean lines for all UI components to maintain a contemporary, uncluttered feel that respects the user's attention."
    },
    {
      "principle": "Autonomous & Deterministic",
      "description": "Design for 99% autonomy with deterministic calculations and static content. Minimize manual updates while maintaining high-quality user experiences."
    },
    {
      "principle": "Mobile-First Responsive",
      "description": "Prioritize mobile experience with touch-friendly interactions, readable text sizes, and adaptive layouts that work seamlessly across all devices."
    }
  ],

  "style": "Dark, futuristic, mystical, minimalist, elegant, cosmic",

